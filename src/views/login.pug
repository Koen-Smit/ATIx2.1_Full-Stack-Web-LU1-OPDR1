extends layout

block content
  .container.mt-4
    .row.justify-content-center
      .col-md-6.col-lg-5
        .card.shadow-lg.border-0
          .card-header.bg-primary.text-white.text-center.py-4
            h2.mb-0
              i.bi.bi-person-circle.me-2
              | Inloggen
          .card-body.p-5
            form(action="/auth/login", method="POST")
              .mb-3
                label.form-label(for="email") E-mailadres
                input.form-control.form-control-lg(type="email", id="email", name="email", required, placeholder="jouw@email.com")
              
              .mb-4
                label.form-label(for="password") Wachtwoord
                input.form-control.form-control-lg(type="password", id="password", name="password", required, placeholder="Voer je wachtwoord in")
              
              .d-grid.mb-3
                button.btn.btn-primary.btn-lg(type="submit")
                  i.bi.bi-box-arrow-in-right.me-2
                  | Inloggen
            
            hr.my-4
            
            .text-center
              p.text-muted.mb-3 Nog geen account?
              a.btn.btn-outline-secondary(href="/auth/register")
                i.bi.bi-person-plus.me-2
                | Registreren

        .text-center.mt-3
          a.text-muted(href="/")
            i.bi.bi-arrow-left.me-1
            | Terug naar home